@model LMDB.ViewModels.Comment.CommentCreateViewModel

@{
    ViewBag.Title = "CreateComment";
}

<h2>CreateComment</h2>

@using (Html.BeginForm("CreateComment","Movie",FormMethod.Post)) 
{
    <div class="form-inline">
        <div class="comment-block">
            @Html.HiddenFor(m => m.CommentedMovieId)
            <div class="form-group">
                <textarea name="" id="" cols="30" rows="3" placeholder="Add comment..."></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
